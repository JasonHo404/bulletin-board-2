<div>
  <div>
    <h1>
      All boards
    </h1>
  </div>
</div>

<hr>

<div>
  <% if current_user != nil %>
    <div>
      <h2>
        Add a new board
      </h2>

      <form action="/insert_board" method="post">
        <div>
          <label for="name_box">
            Name
          </label>

          <input type="text" id="name_box" name="query_name">
        </div>

        <button>
          Add board
        </button>
      </form>

  <% else %>
      <p> <a href="/users/sign_in">Sign in to add a board</a></p>
  <% end %>
<hr> 

</div>


<ul>
  <% @list_of_boards.each do |a_board| %>
    <li>
      <a href="/boards/<%= a_board.id %>">
        <%= a_board.name %>
      </a>
      <div>
        <% x = User.where({id: a_board.user_id}).first%>
        <%=x.email%>
      </div>
        <hr>
    </li>
  <% end %>
</ul>
